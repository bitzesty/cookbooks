<%= @environment %>:
  adapter:   <%= @adapter %>
  database:  <%= @database %>
  username:  <%= @username %>
  password:  <%= @password %>
  host:      <%= @host %>
  <%= "reconnect: true" if @adapter.match("^mysql") %>
  <%= "port:   #{@port}" if @port %>
  <%= "pool:   #{@pool}" if @pool %>
  <%= "encoding: #{@encoding}" if @encoding %>
