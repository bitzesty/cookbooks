<%= @environment %>:
  adapter:   <%= @adapter %>
  database:  <%= @database %>
  username:  <%= @username %>
  password:  <%= @password %>
  host:      <%= @host %>
<%- if @adapter.match("^mysql") %>
  reconnect: true
<%- end %>
<%- if @port %>
  port:      <%= @port %>
<%- end %>
<%- if @pool %>
  pool:      <%= @pool %>
<%- end %>
<%- if @encoding %>
  encoding:  <%= @encoding %>
<%- end %>
